{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",
    "types": ["@types/node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
